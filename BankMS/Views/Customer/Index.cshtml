@model IEnumerable<BankMS.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<!-- Bootstrap 5 & Font Awesome CDNs (add to _Layout.cshtml if not already) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-users me-2"></i>Customer Management</h4>
                    <a asp-action="CreateOrEdit" class="btn btn-light btn-lg">
                        <i class="fas fa-plus me-1"></i> Add New Customer
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" id="searchInput" class="form-control" placeholder="Search by NID, Address, or Gender...">
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <small class="text-muted">Total Customers: <strong>@Model.Count()</strong></small>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="customersTable">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>NID Number</th>
                                    <th>Address</th>
                                    <th>Date of Birth</th>
                                    <th>Gender</th>
                                    <th>KYC Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr>
                                        <td>@customer.Id</td>
                                        <td><strong>@customer.NIDNumber</strong></td>
                                        <td>@customer.Address</td>
                                        <td>@customer.DateOfBirth:yyyy-MM-dd</td>
                                        <td>@customer.Gender</td>
                                        <td>
                                            @{
                                                var badgeClass = customer.KYCStatus?.ToLower() switch
                                                {
                                                    "verified" => "bg-success",
                                                    "approved" => "bg-success",
                                                    "pending" => "bg-warning",
                                                    "rejected" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badgeClass">@customer.KYCStatus</span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="CreateOrEdit" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <p class="text-muted">No customers found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Client-side search
        document.getElementById('searchInput').addEventListener('keyup', function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('#customersTable tbody tr');
            rows.forEach(row => {
                let text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });
    </script>
}