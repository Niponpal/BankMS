@model BankMS.Models.Transaction
@{
    var isEdit = Model?.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Transaction" : "New Transaction";
    ViewData["ActivePage"] = "TransactionHistory";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="mb-1 fw-bold text-primary">@ViewData["Title"]</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-controller="Transaction" asp-action="Index">Transaction History</a></li>
                <li class="breadcrumb-item active" aria-current="page">@(isEdit ? "Edit" : "Create")</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Form Card -->
<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="dashboard-card overflow-hidden shadow-lg" style="border-radius: 20px; border: none;">
            <!-- Gradient Header -->
            <div class="text-center py-6 text-white position-relative overflow-hidden"
                 style="background: linear-gradient(135deg, var(--bs-primary), #0d6efdcc);">
                <div class="position-absolute top-0 end-0 opacity-10">
                    <i class="bi bi-arrow-left-right fs-1" style="font-size: 12rem; transform: rotate(15deg);"></i>
                </div>
                <div class="position-relative">
                    <div class="d-inline-flex align-items-center justify-content-center bg-white shadow-lg rounded-circle mb-4"
                         style="width: 100px; height: 100px;">
                        <i class="bi bi-arrow-repeat fs-2 text-primary"></i>
                    </div>
                    <h2 class="fw-bold mb-2 display-6">@ViewData["Title"]</h2>
                    <p class="mb-0 fs-5 opacity-90 px-4">
                        @(isEdit ? "Update the transaction details below." : "Record a new transaction by filling in the required information.")
                    </p>
                </div>
            </div>

            <!-- Form Body -->
            <div class="card-body p-5 p-xl-6">
                <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-4">
                        <!-- Account ID -->
                        <div class="col-md-6">
                            <label asp-for="AccountId" class="form-label fw-semibold text-dark">Account Number</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-credit-card-2-front text-primary"></i></span>
                                <input asp-for="AccountId" type="number" min="1" class="form-control" placeholder="e.g. 1001" required />
                            </div>
                            <span asp-validation-for="AccountId" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Transaction Type -->
                        <div class="col-md-6">
                            <label asp-for="TransactionType" class="form-label fw-semibold text-dark">Transaction Type</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-arrow-up-down text-info"></i></span>
                                <select asp-for="TransactionType" class="form-select form-select-lg rounded-end" required>
                                    <option value="" disabled selected>-- Select Type --</option>
                                    <option value="Deposit">Deposit</option>
                                    <option value="Withdrawal">Withdrawal</option>
                                    <option value="Transfer">Transfer</option>
                                    <option value="Credit">Credit</option>
                                    <option value="Debit">Debit</option>
                                    <option value="Fee">Fee</option>
                                </select>
                            </div>
                            <span asp-validation-for="TransactionType" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Amount -->
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label fw-semibold text-dark">Amount</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-cash-stack text-success"></i></span>
                                <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" placeholder="e.g. 1500.00" required />
                                <span class="input-group-text bg-light border-0">USD</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Transaction Date -->
                        <div class="col-md-6">
                            <label asp-for="TransactionDate" class="form-label fw-semibold text-dark">Transaction Date & Time</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-calendar-event text-muted"></i></span>
                                <input asp-for="TransactionDate" type="datetime-local" class="form-control" required />
                            </div>
                            <span asp-validation-for="TransactionDate" class="text-danger small mt-1"></span>
                            <small class="text-muted">Default: Current date and time</small>
                        </div>

                        <!-- Reference (Optional) -->
                        <div class="col-12">
                            <label asp-for="Reference" class="form-label fw-semibold text-dark">Reference / Description <small class="text-muted">(Optional)</small></label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-chat-text text-secondary"></i></span>
                                <input asp-for="Reference" type="text" class="form-control" placeholder="e.g. Salary Deposit, ATM Withdrawal, Bill Payment" maxlength="200" />
                            </div>
                            <span asp-validation-for="Reference" class="text-danger small mt-1"></span>
                        </div>
                    </div>

                    <hr class="my-5 border-light">

                    <div class="d-flex justify-content-end gap-3 mt-5">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                            <i class="bi bi-check2-circle me-2"></i>@(isEdit ? "Update Transaction" : "Record Transaction")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Set current date and time if creating new transaction
            if (!@Json.Serialize(isEdit)) {
                const now = new Date();
                const offset = now.getTimezoneOffset() * 60000;
                const localISOTime = new Date(now - offset).toISOString().slice(0, 16);

                const dateTimeInput = document.querySelector('input[name="TransactionDate"]');
                if (dateTimeInput && !dateTimeInput.value) {
                    dateTimeInput.value = localISOTime;
                }
            }

            // Enhance select placeholder styling
            const typeSelect = document.querySelector('select[name="TransactionType"]');
            if (typeSelect && typeSelect.value === "") {
                typeSelect.classList.add('text-muted');
            }
            typeSelect?.addEventListener('change', function() {
                this.classList.remove('text-muted');
            });
        });
    </script>
}

<style>
    .dashboard-card {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

    .input-group-text {
        background-color: #f1f5f9;
        border: none;
        color: var(--bs-primary);
    }

    .form-control, .form-select {
        border-radius: 12px;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        }

    .btn-lg {
        border-radius: 12px;
        font-weight: 600;
        padding: 0.75rem 1.75rem;
    }

    .rounded-pill {
        border-radius: 50rem !important;
    }

    hr.border-light {
        opacity: 0.3;
    }
</style>