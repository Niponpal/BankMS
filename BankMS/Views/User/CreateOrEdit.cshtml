@model BankMS.Models.User

@{
    ViewData["Title"] = Model?.Id > 0 ? "Edit User" : "Create User";
    var isEdit = Model != null && Model.Id > 0;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="CreateOrEdit" method="post">

                        @if (isEdit)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        @if (!isEdit)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Password</label>
                                <input name="Password" type="password" class="form-control" placeholder="Enter password" />
                            </div>
                        }

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="">-- Select Role --</option>
                                <option value="Admin">Admin</option>
                                <option value="Customer">Customer</option>
                                <option value="Employee">Employee</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Is Active -->
                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label fw-semibold"></label>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
                            <button type="submit" class="btn btn-success px-4">
                                @(isEdit ? "Update" : "Create")
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
