@model BankMS.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="card shadow-lg border-0 rounded-4">

                <!-- Header -->
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">User Details</h4>
                </div>

                <!-- Body -->
                <div class="card-body p-4">

                    <div class="row mb-3">
                        <div class="col-5 fw-semibold">Full Name</div>
                        <div class="col-7">@Model.FullName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-5 fw-semibold">Email</div>
                        <div class="col-7">@Model.Email</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-5 fw-semibold">Phone Number</div>
                        <div class="col-7">@Model.PhoneNumber</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-5 fw-semibold">Role</div>
                        <div class="col-7">
                            <span class="badge bg-info text-dark">@Model.Role</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-5 fw-semibold">Status</div>
                        <div class="col-7">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-5 fw-semibold">Created At</div>
                        <div class="col-7">
                            @Model.CreatedAt.ToString("dd MMM yyyy hh:mm tt")
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Back
                        </a>

                        <div>
                            <a asp-action="CreateOrEdit" asp-route-id="@Model.Id"
                               class="btn btn-primary me-2">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@Model.Id"
                               class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this user?');">
                                Delete
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
