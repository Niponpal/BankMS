@model BankMS.Models.Account

@{
    ViewData["Title"] = Model?.Id > 0 ? "Edit Account" : "Create Account";
    var isEditMode = Model?.Id > 0;
    var accountTypes = new List<string> { "Savings", "Current", "Fixed Deposit", "Salary", "Business", "Student" };
    var statuses = new List<string> { "Active", "Inactive", "Closed", "Dormant", "Restricted" };
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-xl-8 mx-auto">

            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="h4 mb-1">
                        <i class="bi bi-pencil-square me-2"></i>
                        @ViewData["Title"]
                    </h2>
                    <p class="text-muted mb-0">
                        @(isEditMode ? "Update account details below" : "Fill in the details to create a new account")
                    </p>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-light text-dark me-3 px-3 py-2 rounded-pill">
                        <i class="bi bi-info-circle me-1"></i>
                        @(isEditMode ? "Editing Mode" : "Creation Mode")
                    </span>
                </div>
            </div>

            <!-- Progress Steps (for create mode) -->
            @if (!isEditMode)
            {
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-body py-3">
                        <div class="steps">
                            <div class="step active">
                                <div class="step-icon">1</div>
                                <div class="step-label">Basic Info</div>
                            </div>
                            <div class="step">
                                <div class="step-icon">2</div>
                                <div class="step-label">Account Details</div>
                            </div>
                            <div class="step">
                                <div class="step-icon">3</div>
                                <div class="step-label">Review</div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Main Form Card -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-bank display-6"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">Account Information</h4>
                            <small class="opacity-75">Please provide all required details</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>

                        @if (isEditMode)
                        {
                            <input type="hidden" asp-for="Id" />
                            <div class="alert alert-info d-flex align-items-center mb-4">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                <div>You are editing account ID: <strong>@Model.Id</strong></div>
                            </div>
                        }

                        <div class="row g-4">

                            <!-- Account Number Section -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="AccountNumber" class="form-control"
                                           placeholder="Account Number"
                                           required />
                                    <label asp-for="AccountNumber" class="form-label">
                                        <i class="bi bi-123 me-1"></i>Account Number
                                    </label>
                                    <div class="invalid-feedback">
                                        Please enter a valid account number.
                                    </div>
                                    <small class="form-text text-muted mt-1">
                                        <i class="bi bi-info-circle"></i> Format: XXX-XXXXXX-XX
                                    </small>
                                </div>
                            </div>

                            <!-- Account Type Section -->
                            <div class="col-md-6">
                                <label asp-for="AccountType" class="form-label fw-semibold">
                                    <i class="bi bi-credit-card me-1"></i>Account Type
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-wallet2"></i>
                                    </span>
                                    <select asp-for="AccountType" class="form-select form-select-lg" required>
                                        <option value="" selected disabled>Choose account type...</option>
                                        @foreach (var type in accountTypes)
                                        {
                                            <option value="@type">@type Account</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="AccountType" class="text-danger"></span>
                            </div>

                            <!-- Balance Section -->
                            <div class="col-md-6">
                                <label asp-for="Balance" class="form-label fw-semibold">
                                    <i class="bi bi-cash-stack me-1"></i>Initial Balance
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">$</span>
                                    <input asp-for="Balance" type="number" step="0.01"
                                           class="form-control form-control-lg"
                                           placeholder="0.00"
                                           required />
                                    <span class="input-group-text bg-light">.00</span>
                                </div>
                                <div class="mt-2">
                                    <div class="form-text d-flex justify-content-between">
                                        <span>Minimum: $0.00</span>
                                        <span>Maximum: $999,999,999.99</span>
                                    </div>
                                </div>
                                <span asp-validation-for="Balance" class="text-danger"></span>
                            </div>

                            <!-- Status Section -->
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold">
                                    <i class="bi bi-check-circle me-1"></i>Account Status
                                </label>
                                <div class="btn-group w-100" role="group">
                                    @foreach (var status in statuses)
                                    {
                                        <input type="radio" class="btn-check"
                                               asp-for="Status" value="@status"
                                               id="status-@status" autocomplete="off">
                                        <label class="btn btn-outline-primary" for="status-@status">
                                            @status
                                        </label>
                                    }
                                </div>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <!-- Created Date Section -->
                            <div class="col-12">
                                <div class="card border-0 bg-light-subtle">
                                    <div class="card-body">
                                        <label asp-for="CreatedDate" class="form-label fw-semibold">
                                            <i class="bi bi-calendar-date me-1"></i>Account Creation Date
                                        </label>
                                        <div class="row align-items-center">
                                            <div class="col-md-6">
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light">
                                                        <i class="bi bi-calendar3"></i>
                                                    </span>
                                                    <input asp-for="CreatedDate" type="date"
                                                           class="form-control"
                                                           required />
                                                </div>
                                            </div>
                                            <div class="col-md-6 mt-2 mt-md-0">
                                                <div class="form-text">
                                                    <i class="bi bi-clock-history me-1"></i>
                                                    This date determines account maturity and interest calculation
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Form Actions -->
                        <div class="mt-5 pt-4 border-top">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                        <i class="bi bi-arrow-left me-2"></i>Back to List
                                    </a>
                                </div>
                                <div class="d-flex gap-3">
                                    @if (isEditMode)
                                    {
                                        <button type="button" class="btn btn-danger btn-lg px-4"
                                                onclick="confirmDelete()">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </button>
                                    }
                                    <button type="reset" class="btn btn-warning btn-lg px-4">
                                        <i class="bi bi-arrow-clockwise me-2"></i>Reset
                                    </button>
                                    <button type="submit" class="btn btn-primary btn-lg px-5">
                                        <i class="bi bi-save me-2"></i>
                                        @(isEditMode ? "Update Account" : "CreatreOrEdit Account")
                                    </button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

                <!-- Card Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-shield-check text-success me-2"></i>
                                <small class="text-muted">All information is secured with 256-bit SSL encryption</small>
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>
                                Last updated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Information Card -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card border-0 bg-info bg-opacity-10">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-lightbulb me-2"></i>Tip
                            </h6>
                            <p class="card-text small">
                                Ensure all details are accurate. Account number must follow the bank's numbering convention.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 bg-warning bg-opacity-10">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-exclamation-triangle me-2"></i>Important
                            </h6>
                            <p class="card-text small">
                                Initial balance cannot be changed after account creation. Review carefully.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 bg-success bg-opacity-10">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-check-circle me-2"></i>Note
                            </h6>
                            <p class="card-text small">
                                Accounts are automatically assigned a unique ID upon creation.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (isEditMode)
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this account?</p>
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. All account data will be permanently deleted.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter account number to confirm:</label>
                        <input type="text" id="confirmAccountNumber" class="form-control"
                               placeholder="Type account number here">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="performDelete()">
                        Delete Account
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Delete confirmation
        function confirmDelete() {
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        function performDelete() {
            var confirmInput = document.getElementById('confirmAccountNumber');
            var accountNumber = '@Model.AccountNumber';

            if (confirmInput.value === accountNumber) {
                // Submit delete form
                var form = document.createElement('form');
                form.method = 'post';
                form.action = '@Url.Action("Delete", new { id = Model.Id })';

                var csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                var csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '__RequestVerificationToken';
                csrfInput.value = csrfToken;
                form.appendChild(csrfInput);

                document.body.appendChild(form);
                form.submit();
            } else {
                alert('Account number does not match. Please try again.');
            }
        }

        // Format currency input
        document.addEventListener('DOMContentLoaded', function() {
            var balanceInput = document.querySelector('input[asp-for="Balance"]');
            if (balanceInput) {
                balanceInput.addEventListener('input', function(e) {
                    var value = e.target.value;
                    if (value) {
                        // Format as currency
                        e.target.value = parseFloat(value).toFixed(2);
                    }
                });
            }
        });
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 1px solid #dee2e6;
            padding: 12px 15px;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
                transform: translateY(-2px);
            }

        .form-floating > .form-control {
            padding: 1rem 0.75rem;
        }

        .btn-group .btn {
            border-radius: 8px !important;
            margin: 2px;
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .step {
            text-align: center;
            flex: 1;
            position: relative;
        }

            .step:not(:last-child):after {
                content: '';
                position: absolute;
                width: 100%;
                height: 2px;
                background: #dee2e6;
                top: 15px;
                left: 50%;
                z-index: 1;
            }

            .step.active:not(:last-child):after {
                background: #0d6efd;
            }

        .step-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #dee2e6;
            color: #6c757d;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 8px;
            position: relative;
            z-index: 2;
            font-weight: bold;
        }

        .step.active .step-icon {
            background: #0d6efd;
            color: white;
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.2);
        }

        .step-label {
            font-size: 0.875rem;
            color: #6c757d;
            font-weight: 500;
        }

        .step.active .step-label {
            color: #0d6efd;
            font-weight: 600;
        }

        .btn-lg {
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
        }

        .input-group-text {
            border-radius: 10px 0 0 10px;
        }

        .btn-check:checked + .btn-outline-primary {
            background-color: #0d6efd;
            color: white;
        }

      
        }
    </style>
}