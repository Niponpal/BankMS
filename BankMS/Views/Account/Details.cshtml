@model BankMS.Models.Account

@{
    ViewData["Title"] = $"{Model.AccountNumber} - Account Details";
    var balanceClass = Model.Balance >= 0 ? "text-success" : "text-danger";
    var statusColor = Model.Status == "Active" ? "success" :
                     Model.Status == "Inactive" ? "secondary" :
                     Model.Status == "Frozen" ? "warning" : "danger";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title">Account Details</h1>
            <div class="page-pretitle">
                <span class="badge bg-@statusColor">@Model.Status</span>
                <span class="text-muted ms-2">#@Model.AccountNumber</span>
            </div>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Accounts
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Account Information Card -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Account Information</h3>
                <div class="card-actions">
                    <a asp-action="CreateOEdit" asp-route-id="@Model.Id"
                       class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Account Number</label>
                            <div class="h4 font-weight-bold">@Model.AccountNumber</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small">Account Type</label>
                            <div>
                                <span class="badge bg-blue-lt">@Model.AccountType</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small">Created Date</label>
                            <div class="h5">
                                <i class="far fa-calendar-alt text-muted me-2"></i>
                                @Model.CreatedDate.ToString("dddd, MMMM dd, yyyy")
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Current Balance</label>
                            <div class="display-4 @balanceClass font-weight-bold">
                                @Model.Balance.ToString("C")
                            </div>
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i>
                                Available for withdrawal
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small">Account Status</label>
                            <div>
                                <span class="badge bg-@statusColor badge-lg">
                                    <i class="fas fa-circle me-1" style="font-size: 8px;"></i>
                                    @Model.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Panel -->
        <div class="card mt-4">
            <div class="card-header">
                <h3 class="card-title">Quick Actions</h3>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-sm-6 col-md-3">
                        <a href="#" class="btn btn-success w-100"
                           data-bs-toggle="modal" data-bs-target="#depositModal">
                            <i class="fas fa-plus-circle me-2"></i>Deposit
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a href="#" class="btn btn-warning w-100"
                           data-bs-toggle="modal" data-bs-target="#withdrawModal">
                            <i class="fas fa-minus-circle me-2"></i>Withdraw
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a href="#" class="btn btn-info w-100"
                           data-bs-toggle="modal" data-bs-target="#transferModal">
                            <i class="fas fa-exchange-alt me-2"></i>Transfer
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <a href="#" class="btn btn-secondary w-100">
                            <i class="fas fa-file-invoice me-2"></i>Statement
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Account Summary & Statistics -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Account Summary</h3>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex align-items-center">
                        <div class="flex-fill">
                            <div class="text-muted small">Days Active</div>
                            <div class="h5 mb-0">
                                @((DateTime.Now - Model.CreatedDate).Days)
                            </div>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-calendar-check fa-2x"></i>
                        </div>
                    </div>

                    <div class="list-group-item d-flex align-items-center">
                        <div class="flex-fill">
                            <div class="text-muted small">Account Age</div>
                            <div class="h5 mb-0">
                                @{
                                    var years = (DateTime.Now - Model.CreatedDate).Days / 365;
                                    <text>@years Year@(years != 1 ? "s" : "")</text>
                                }
                            </div>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-birthday-cake fa-2x"></i>
                        </div>
                    </div>

                    <div class="list-group-item d-flex align-items-center">
                        <div class="flex-fill">
                            <div class="text-muted small">Last Updated</div>
                            <div class="h6 mb-0">@Model.CreatedDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-history fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Management Card -->
        <div class="card mt-4">
            <div class="card-header">
                <h3 class="card-title">Status Management</h3>
            </div>
            <div class="card-body">
                @if (Model.Status == "Active")
                {
                    <button class="btn btn-outline-danger w-100 mb-2"
                            onclick="confirmStatusChange('freeze', @Model.Id)">
                        <i class="fas fa-snowflake me-2"></i>Freeze Account
                    </button>
                    <button class="btn btn-outline-secondary w-100"
                            onclick="confirmStatusChange('close', @Model.Id)">
                        <i class="fas fa-times-circle me-2"></i>Close Account
                    </button>
                }
                else if (Model.Status == "Frozen")
                {
                    <button class="btn btn-outline-success w-100"
                            onclick="confirmStatusChange('activate', @Model.Id)">
                        <i class="fas fa-check-circle me-2"></i>Activate Account
                    </button>
                }
                else if (Model.Status == "Closed")
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        This account is permanently closed
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Footer Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-print me-2"></i>Print Details
                        </a>
                        <a href="#" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-download me-2"></i>Export PDF
                        </a>
                    </div>
                    <div>
                        <a asp-action="CreateOEdit" asp-route-id="@Model.Id"
                           class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit Account
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-list me-2"></i>View All Accounts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Deposit Modal -->
<div class="modal fade" id="depositModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Make Deposit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="depositForm">
                    <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control"
                                   placeholder="0.00" step="0.01" min="0.01" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control"
                               placeholder="Deposit description">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="depositForm" class="btn btn-success">Process Deposit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmStatusChange(action, accountId) {
            let message = '';
            let actionText = '';

            switch(action) {
                case 'freeze':
                    message = 'Are you sure you want to freeze this account?';
                    actionText = 'Freeze';
                    break;
                case 'close':
                    message = 'Are you sure you want to close this account? This action cannot be undone.';
                    actionText = 'Close';
                    break;
                case 'activate':
                    message = 'Are you sure you want to activate this account?';
                    actionText = 'Activate';
                    break;
            }

            if(confirm(message)) {
                // AJAX call to update status
                fetch(`/Account/UpdateStatus/${accountId}?action=${action}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if(response.ok) {
                        location.reload();
                    } else {
                        alert('Error updating account status');
                    }
                });
            }
        }

        // Format currency display
        document.querySelectorAll('.currency').forEach(element => {
            const value = parseFloat(element.textContent);
            element.textContent = new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD'
            }).format(value);
        });

        // Modal form handling
        document.getElementById('depositForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            // Handle deposit logic here
            alert('Deposit functionality to be implemented');
        });
    </script>
}